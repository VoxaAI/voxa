{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-no-unused-expression-chai"
  ],
  "jsRules": {
    "no-console": [
      true,
      true,
      true
    ]
  },
  "rules": {
    "no-console": [
      true,
      true,
      true
    ],
    "no-require-imports": [
      false
    ],
    "no-var-requires": [
      false
    ],
    "max-classes-per-file": [
      false
    ],
    "max-line-length": {
      "options": [
        120
      ],
      "severity": "warning"
    }
  },
  "rulesDirectory": []
}
